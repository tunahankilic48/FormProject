@model IEnumerable<FormVM>

<div class="row">
    <div class="col-lg-2 "></div>
    <a class="btn btn-primary m-2 col-lg-2" asp-controller="Form" asp-action="Create">Create New Form</a>
</div>
<div class="row d-flex justify-content-center">

    <div class="col-lg-8 ">
        <table class="table table-hover table-striped">
            <thead>
                <tr class="table-primary text-center">
                    <th scope="col">@Html.DisplayNameFor(x=>x.Id)</th>
                    <th scope="col">@Html.DisplayNameFor(x=>x.Name)</th>
                    <th scope="col">@Html.DisplayNameFor(x=>x.CreatedBy)</th>
                    <th scope="col"></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {

                    <tr class="table-primary text-center align-middle">
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.CreatedBy</td>
                        <td>
                            <a class="btn btn-info m-2" asp-controller="form" asp-action="formdetail" asp-route-Id="@item.Id">View Form</a>
                        </td>
                    </tr>
                }

            </tbody>

        </table>
    </div>
</div>