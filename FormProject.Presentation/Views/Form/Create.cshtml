            <option value="false">No</option>
        </select>

    </td>

    <td>
        <table class="col-lg-10">

            <td class="col-lg-6">
                    <label>Name: </label>
                <input name="forWhat" type='text' placeholder="For What"/>
            </td>   

            <td class="col-lg-6">
                <label>Data Type: </label>

        @Html.DropDownList("dataType",ViewBag.DataTypes as SelectList)


