@model RegistorDTO


<div class="hold-transition register-page bg-dark mt-3">
    <div class="register-box">
        <div class="card">
            <div class="card-body register-card-body">
                <h1 class="text-dark">Registor to your session</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger">
                    @if (TempData["error"] != null)
                    {
                        <p>@TempData["error"]</p>
                    }
                </div>
                <form asp-controller="account" asp-action="registor" method="post">
                    <div class="input-group mt-4">
                        <input asp-for="UserName" class="form-control" placeholder="User Name">
                    </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    <div class="input-group mt-4">
                        <input asp-for="Email" class="form-control" placeholder="Email">
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <div class="input-group mt-4">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <div class="input-group mt-4">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    <div>
                        <button type="submit" class="btn btn-primary btn-block mt-4">Register</button>
                    </div>
                </form>


                <a asp-controller="account" asp-action="login">I already have a membership</a>
            </div>
        </div>
    </div>
</div>


