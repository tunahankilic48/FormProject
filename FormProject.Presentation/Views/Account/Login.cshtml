@model LoginDTO



<div class="hold-transition login-page bg-dark mt-3">
    <div class="login-box">

        <div class="card">
            <div class="card-body login-card-body text-dark">
                <h1 class="text-dark">Sign in to start your session</h1>

                <form asp-controller="account" asp-action="login" asp-route-returnUrl="@ViewData["returnUrl"]" method="post">

                    <div class="input-group mt-4">
                        <input asp-for="UserName" class="form-control" placeholder="User Name">

                    </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    <div class="input-group mt-4">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password">

                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <div class="">
                        <button type="submit" class="btn btn-primary btn-block mt-4">Sign In</button>
                    </div>

                </form>

                <p class="mb-0">
                    <a asp-controller="account" asp-action="registor">Register a new membership</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
</div>
<!-- /.login-box -->